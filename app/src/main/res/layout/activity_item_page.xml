<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemPageActivity"
    android:orientation="vertical">

    <include layout="@layout/appbar"
        android:id="@+id/itempage_appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:id="@+id/itempage_image"
        android:src="#212121"
        android:layout_below="@id/itempage_appbar"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="Item Name"
        android:textSize="30sp"
        android:layout_below="@+id/itempage_image"
        android:textStyle="bold"
        android:textColor="#212121"
        android:id="@+id/itempage_itemname"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="22sp"
        android:id="@+id/itempageDescription"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/itempage_itemname"
        android:text="Description"
        android:textColor="@color/colorAccent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/lineitem"
        android:layout_below="@+id/itempageDescription"
        android:background="@color/colorAccent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sample Description"
        android:textSize="20sp"
        android:layout_below="@+id/itempageDescription"
        android:textColor="#212121"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:id="@+id/itempage_desc"/>

</RelativeLayout>